global:
  scrape_interval: 15s # интервал сбора и очистки данных с целей

# Ресурсы, которые должен отслеживать Prometheus
scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['{{ ansible_host }}:9100']

  - job_name: 'nginx_log_exporter'
    static_configs:
      - targets: ['{{ ansible_host }}:4040']
